<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="5dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/expName"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/expDesc"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/expRegion"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:ems="10"
        android:hint="Region"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/TypeOfTrial"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:text="Type Of Trials"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/expNum"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:ems="10"
        android:hint="Minimum number of Trials"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="center" />

    <CheckBox
        android:id="@+id/geoCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:drawablePadding="10dp"
        android:layoutDirection="rtl"
        android:padding="10dp"
        android:text="Require Geolocation"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="149dp">

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:text="OK" />
    </LinearLayout>

</LinearLayout>